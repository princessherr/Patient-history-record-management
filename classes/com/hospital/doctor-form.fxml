<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.DoctorFormController"
      style="-fx-background-color: white; -fx-padding: 20;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register New Doctor" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="firstNameField" promptText="Enter first name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="lastNameField" promptText="Enter last name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Specialization:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="specializationField" promptText="Enter specialization" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="contactNumberField" promptText="Enter contact number" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Save" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="100"/>
        <Button fx:id="cancelButton" text="Cancel" 
                style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="100"/>
    </HBox>
    
    <Label fx:id="messageLabel" style="-fx-font-size: 14px;"/>
</VBox> 