<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hospital.controllers.AdminDashboardController" stylesheets="@styles.css">
    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #3F51B5; -fx-padding: 15 20;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="20" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-tab-min-height: 40; -fx-tab-max-height: 40;">
            <!-- Dashboard Tab -->
            <Tab text="Dashboard">
                <VBox spacing="20" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
                    <HBox spacing="20" alignment="CENTER">
                        <!-- Hospital Stats Card -->
                        <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                            <Label text="Total Hospitals" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="totalHospitalsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                        </VBox>
                        
                        <!-- Patient Stats Card -->
                        <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                            <Label text="Total Patients" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="totalPatientsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                        </VBox>
                        
                        <!-- Doctor Stats Card -->
                        <VBox styleClass="stat-card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                            <Label text="Total Doctors" style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D;">
                                <font>
                                    <Font size="14" />
                                </font>
                            </Label>
                            <Label fx:id="totalDoctorsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                <font>
                                    <Font name="System Bold" size="28" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    
                    <!-- Charts -->
                    <HBox spacing="20" VBox.vgrow="ALWAYS">
                        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;" HBox.hgrow="ALWAYS">
                            <Label text="Patient Gender Distribution" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                            <Separator style="-fx-opacity: 0.3;" />
                            <HBox spacing="10" VBox.vgrow="ALWAYS">
                                <PieChart fx:id="genderDistributionChart" legendVisible="false" labelsVisible="false" HBox.hgrow="ALWAYS" />
                                <VBox spacing="15" alignment="CENTER" minWidth="150" style="-fx-padding: 10;">
                                    <Label text="Gender Statistics" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                        <font>
                                            <Font name="System Bold" size="14" />
                                        </font>
                                    </Label>
                                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10; -fx-background-color: #E8F5E9; -fx-background-radius: 5;">
                                        <Rectangle width="15" height="15" fill="#4CAF50" />
                                        <VBox>
                                            <Label text="Male" style="-fx-font-size: 12px; -fx-text-fill: #2C3E50;" />
                                            <Label fx:id="maleCountLabel" text="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                                        </VBox>
                                    </HBox>
                                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10; -fx-background-color: #E3F2FD; -fx-background-radius: 5;">
                                        <Rectangle width="15" height="15" fill="#2196F3" />
                                        <VBox>
                                            <Label text="Female" style="-fx-font-size: 12px; -fx-text-fill: #2C3E50;" />
                                            <Label fx:id="femaleCountLabel" text="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                                        </VBox>
                                    </HBox>
                                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10; -fx-background-color: #FFF3E0; -fx-background-radius: 5;">
                                        <Rectangle width="15" height="15" fill="#FF9800" />
                                        <VBox>
                                            <Label text="Other" style="-fx-font-size: 12px; -fx-text-fill: #2C3E50;" />
                                            <Label fx:id="otherCountLabel" text="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                                        </VBox>
                                    </HBox>
                                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10; -fx-background-color: #F5F5F5; -fx-background-radius: 5;">
                                        <Rectangle width="15" height="15" fill="#9E9E9E" />
                                        <VBox>
                                            <Label text="Total" style="-fx-font-size: 12px; -fx-text-fill: #2C3E50;" />
                                            <Label fx:id="totalGenderCountLabel" text="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </HBox>
                        </VBox>
                        
                        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;" HBox.hgrow="ALWAYS">
                            <Label text="Treatment Requests by Urgency" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                <font>
                                    <Font name="System Bold" size="16" />
                                </font>
                            </Label>
                            <Separator style="-fx-opacity: 0.3;" />
                            <BarChart fx:id="treatmentUrgencyChart" legendVisible="true" VBox.vgrow="ALWAYS">
                                <xAxis>
                                    <CategoryAxis label="Urgency Level" />
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Number of Requests" />
                                </yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                </VBox>
            </Tab>
            
            <!-- Patient Management Tab -->
            <Tab text="Patient Management">
                <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                    <content>
                        <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 20;" spacing="20">
                            <!-- Actions Bar -->
                            <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Patient Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                        <font>
                                            <Font name="System Bold" size="16" />
                                        </font>
                                    </Label>
                                    
                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Button text="Add New Patient" onAction="#handleShowAddPatientForm" 
                                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Button text="Refresh" onAction="#handleRefreshPatients" 
                                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <VBox spacing="5">
                                            <Label text="Search" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                            <HBox spacing="5">
                                                <TextField fx:id="patientSearchField" promptText="Search patients..." prefWidth="250"
                                                          style="-fx-background-color: #f8f9fa; -fx-border-color: #E0E0E0; -fx-border-radius: 5 0 0 5; -fx-background-radius: 5 0 0 5;" />
                                                <Button text="Search" onAction="#handlePatientSearch"
                                                       style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-background-radius: 0 5 5 0; -fx-cursor: hand;" />
                                            </HBox>
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </HBox>
                            
                            <!-- Patients Table -->
                            <VBox spacing="5" VBox.vgrow="ALWAYS">
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <Label fx:id="patientStatusLabel" text="Patient list loaded successfully" style="-fx-text-fill: #2C3E50; -fx-font-style: italic;" HBox.hgrow="ALWAYS" />
                                    <Button text="Delete Selected" onAction="#handleDeletePatient"
                                           style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 10;">
                                        <font>
                                            <Font size="10" />
                                        </font>
                                    </Button>
                                    <Button text="Refresh Table" onAction="#handleRefreshPatients"
                                           style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 10;">
                                        <font>
                                            <Font size="10" />
                                        </font>
                                    </Button>
                                </HBox>
                                <AnchorPane VBox.vgrow="ALWAYS" minHeight="400">
                                    <TableView fx:id="patientsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                        <columns>
                                            <TableColumn fx:id="patientIdColumn" text="ID" prefWidth="50"/>
                                            <TableColumn fx:id="patientFirstNameColumn" text="First Name" prefWidth="120"/>
                                            <TableColumn fx:id="patientLastNameColumn" text="Last Name" prefWidth="120"/>
                                            <TableColumn fx:id="patientDobColumn" text="Date of Birth" prefWidth="120"/>
                                            <TableColumn fx:id="patientGenderColumn" text="Gender" prefWidth="80"/>
                                            <TableColumn fx:id="patientContactColumn" text="Contact" prefWidth="120"/>
                                        </columns>
                                        <columnResizePolicy>
                                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                        </columnResizePolicy>
                                        <padding>
                                            <Insets top="5" right="5" bottom="5" left="5" />
                                        </padding>
                                    </TableView>
                                    <VBox.margin>
                                        <Insets top="5" />
                                    </VBox.margin>
                                </AnchorPane>
                                <VBox.margin>
                                    <Insets top="20" />
                                </VBox.margin>
                            </VBox>

                            <!-- Patient Details -->
                            <VBox fx:id="patientDetailsPane" spacing="15" 
                                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                <Label text="Patient Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                    <font>
                                        <Font name="System Bold" size="18" />
                                    </font>
                                </Label>
                                
                                <Separator style="-fx-opacity: 0.3;" />
                                
                                <GridPane hgap="20" vgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="120" prefWidth="150" />
                                        <ColumnConstraints minWidth="200" prefWidth="400" hgrow="ALWAYS" />
                                    </columnConstraints>
                                    
                                    <!-- Patient Name -->
                                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                        <Label text="Full Name" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                        <Label fx:id="patientFullNameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                            <font>
                                                <Font name="System Bold" size="14" />
                                            </font>
                                        </Label>
                                    </VBox>
                                    
                                    <!-- DOB and Gender -->
                                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                        <Label text="Date of Birth / Gender" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                        <Label fx:id="patientDobGenderLabel" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" />
                                    </VBox>
                                    
                                    <!-- Contact -->
                                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                        <Label text="Contact Number" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                        <Label fx:id="patientContactLabel" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" />
                                    </VBox>
                                    
                                    <!-- Medical History -->
                                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP">
                                        <Label text="Medical History" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                    </VBox>
                                    <TextArea fx:id="medicalHistoryTextArea" wrapText="true" prefHeight="150"
                                              style="-fx-background-color: #f8f9fa; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5;"
                                              GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                </GridPane>
                                
                                <HBox spacing="10" alignment="CENTER_RIGHT">
                                    <Button text="Delete Patient" onAction="#handleDeletePatient" 
                                            style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10 20;">
                                        <font>
                                            <Font size="12" />
                                        </font>
                                    </Button>
                                    <Button text="Save Medical History" onAction="#handleSaveMedicalHistory" 
                                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 10 20;">
                                        <font>
                                            <Font name="System Bold" size="12" />
                                        </font>
                                    </Button>
                                </HBox>
                                
                                <VBox.margin>
                                    <Insets top="20" />
                                </VBox.margin>
                            </VBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </Tab>
            
            <!-- Admin Management Tab -->
            <Tab text="Admin Management">
                <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                    <content>
                        <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 20;" spacing="20">
                            <!-- Actions Bar -->
                            <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Admin Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                        <font>
                                            <Font name="System Bold" size="16" />
                                        </font>
                                    </Label>
                                    
                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Button text="Add New Admin" onAction="#handleShowAddAdminForm" 
                                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Button text="Refresh" onAction="#handleRefreshAdmins" 
                                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>
                            
                            <!-- Admins Table -->
                            <VBox spacing="5" VBox.vgrow="ALWAYS">
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <Label text="Admin list" style="-fx-text-fill: #2C3E50; -fx-font-style: italic;" HBox.hgrow="ALWAYS" />
                                    <Button text="Delete Selected Admin" onAction="#handleDeleteAdmin"
                                           style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 10;">
                                        <font>
                                            <Font size="10" />
                                        </font>
                                    </Button>
                                </HBox>
                                <AnchorPane VBox.vgrow="ALWAYS" minHeight="400">
                                    <TableView fx:id="adminsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                        <columns>
                                            <TableColumn fx:id="adminIdColumn" text="ID" prefWidth="50"/>
                                            <TableColumn fx:id="adminFullNameColumn" text="Full Name" prefWidth="200"/>
                                            <TableColumn fx:id="adminEmailColumn" text="Email" prefWidth="250"/>
                                            <TableColumn fx:id="adminUsernameColumn" text="Username" prefWidth="150"/>
                                        </columns>
                                        <columnResizePolicy>
                                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                        </columnResizePolicy>
                                        <padding>
                                            <Insets top="5" right="5" bottom="5" left="5" />
                                        </padding>
                                    </TableView>
                                    <VBox.margin>
                                        <Insets top="5" />
                                    </VBox.margin>
                                </AnchorPane>
                                <VBox.margin>
                                    <Insets top="20" />
                                </VBox.margin>
                            </VBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </Tab>
            
            <!-- Hospital Management Tab -->
            <Tab text="Hospital Management">
                <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
                    <content>
                        <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 20;" spacing="20">
                            <!-- Actions Bar -->
                            <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Hospital Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                                        <font>
                                            <Font name="System Bold" size="16" />
                                        </font>
                                    </Label>
                                    
                                    <HBox spacing="15" alignment="CENTER_LEFT">
                                        <Button text="Add New Hospital" onAction="#handleShowAddHospitalForm" 
                                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Button text="Refresh" onAction="#handleRefreshHospitals" 
                                                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 8 15;">
                                            <font>
                                                <Font size="12" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <VBox spacing="5">
                                            <Label text="Search" style="-fx-text-fill: #7F8C8D; -fx-font-size: 12px;" />
                                            <HBox spacing="5">
                                                <TextField fx:id="hospitalSearchField" promptText="Search hospitals..." prefWidth="250"
                                                          style="-fx-background-color: #f8f9fa; -fx-border-color: #E0E0E0; -fx-border-radius: 5 0 0 5; -fx-background-radius: 5 0 0 5;" />
                                                <Button text="Search" onAction="#handleHospitalSearch"
                                                       style="-fx-background-color: #3F51B5; -fx-text-fill: white; -fx-background-radius: 0 5 5 0; -fx-cursor: hand;" />
                                            </HBox>
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </HBox>
                            
                            <!-- Hospitals Table -->
                            <VBox spacing="5" VBox.vgrow="ALWAYS">
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <Label fx:id="hospitalStatusLabel" text="Hospital list loaded successfully" style="-fx-text-fill: #2C3E50; -fx-font-style: italic;" HBox.hgrow="ALWAYS" />
                                    <Button text="Delete Selected" onAction="#handleDeleteHospital"
                                           style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 10;">
                                        <font>
                                            <Font size="10" />
                                        </font>
                                    </Button>
                                    <Button text="Refresh Table" onAction="#handleRefreshHospitals"
                                           style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand; -fx-padding: 5 10;">
                                        <font>
                                            <Font size="10" />
                                        </font>
                                    </Button>
                                </HBox>
                                <AnchorPane VBox.vgrow="ALWAYS" minHeight="400">
                                    <TableView fx:id="hospitalsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                        <columns>
                                            <TableColumn fx:id="hospitalIdColumn" text="ID" prefWidth="50" minWidth="40"/>
                                            <TableColumn fx:id="hospitalNameColumn" text="Name" prefWidth="150" minWidth="100"/>
                                            <TableColumn fx:id="hospitalAddressColumn" text="Address" prefWidth="200" minWidth="150"/>
                                            <TableColumn fx:id="hospitalContactColumn" text="Contact" prefWidth="120" minWidth="80"/>
                                            <TableColumn fx:id="hospitalEmailColumn" text="Email" prefWidth="150" minWidth="100"/>
                                            <TableColumn fx:id="hospitalUsernameColumn" text="Username" prefWidth="100" minWidth="80"/>
                                        </columns>
                                        <columnResizePolicy>
